{
  "arrowParens": "avoid",
  "bracketSameLine": true,
  "bracketSpacing": true,
  "htmlWhitespaceSensitivity": "ignore",
  "jsxSingleQuote": true,
  "printWidth": 80,
  "quoteProps": "as-needed",
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "overrides": [
    {
      "files": ["**/*.html", "**/*.css", "**/*.scss"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": [".eslintrc", ".gqlconfig", ".prettierrc", ".stylelintrc"],
      "options": {
        "parser": "json"
      }
    }
  ],
  "semi": true
}
